<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:orientation="horizontal"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  >

  <ImageView
    android:id="@+id/avatar"
    android:layout_width="@dimen/avatar_width"
    android:layout_height="wrap_content"
    android:scaleType="fitCenter"
    android:adjustViewBounds="true"
    android:layout_marginVertical="@dimen/full_dynamic_spacing"
    android:layout_marginStart="@dimen/full_dynamic_spacing"
    android:layout_marginEnd="@dimen/quarter_dynamic_spacing"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toStartOf="@id/author"
    tools:ignore="ContentDescription"
    tools:src="@drawable/avatar"/>

  <TextView
    android:id="@+id/author"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/full_dynamic_spacing"
    android:layout_marginEnd="@dimen/quarter_dynamic_spacing"
    android:layout_marginBottom="@dimen/quarter_dynamic_spacing"
    android:layout_marginStart="@dimen/quarter_dynamic_spacing"
    app:layout_constraintTop_toTopOf="@id/avatar"
    app:layout_constraintStart_toEndOf="@id/avatar"
    app:layout_constraintBottom_toTopOf="@id/text"
    app:layout_constraintEnd_toStartOf="@id/posted"
    app:layout_constraintHorizontal_weight="1"
    tools:text="I'm an author!"/>

  <TextView
    android:id="@+id/posted"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/full_dynamic_spacing"
    android:layout_marginEnd="@dimen/full_dynamic_spacing"
    android:layout_marginBottom="@dimen/quarter_dynamic_spacing"
    android:layout_marginStart="@dimen/quarter_dynamic_spacing"
    app:layout_constraintBaseline_toBaselineOf="@id/author"
    app:layout_constraintStart_toEndOf="@id/author"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintBottom_toTopOf="@id/text"
    app:layout_constraintHorizontal_weight="1"
    android:textAlignment="viewEnd"
    tools:text="2025-07-03"/>

  <TextView
    android:id="@+id/text"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/quarter_dynamic_spacing"
    android:layout_marginBottom="@dimen/full_dynamic_spacing"
    app:layout_constraintTop_toBottomOf="@id/author"
    app:layout_constraintEnd_toEndOf="@id/posted"
    app:layout_constraintBottom_toBottomOf="@id/avatar"
    app:layout_constraintStart_toStartOf="@id/author"
    tools:text="Here is my super awesome message! I hope it gets to its intended recipient; fingers crossed..."/>

</androidx.constraintlayout.widget.ConstraintLayout>